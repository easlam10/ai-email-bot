{
  "name": "ai-email-bot",
  "version": "1.0.0",
  "description": "A Node.js bot that fetches emails, analyzes with AI, and sends WhatsApp summaries.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "heroku-postbuild": "npm install --omit=dev && mkdir -p .cache && mv /app/.cache/puppeteer/chrome-headless-shell .cache/puppeteer/",
    "cleanup": "rm -rf .cache/puppeteer/chrome-*"
  },
  "dependencies": {
    "@azure/msal-node": "^3.7.4",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "googleapis": "^160.0.0",
    "mongoose": "^8.16.4",
    "nodemailer": "^7.0.6",
    "nodemon": "^3.1.10",
    "open": "^10.1.2",
    "puppeteer": "^24.9.0"
  },
  "keywords": [
    "email",
    "AI",
    "whatsapp",
    "bot",
    "twilio",
    "gmail",
    "nodejs"
  ],
  "author": "Ehtisham Aslam",
  "engines": {
    "node": ">=18.0.0"
  },
  "puppeteer": {
    "skip_download": false
  }
}
